{
  "name": "HN Mini Avatars",
  "description": "Hey",
  "version": "1.0",
  "manifest_version": 2,

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://news.ycombinator.com/*"],
      "js": ["background.js"]
    }
  ],
  "permissions": ["tabs", "http://*/*", "https://*/*", "activeTab"]
}
